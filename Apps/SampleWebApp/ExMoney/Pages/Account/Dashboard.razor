@page "/account/dashboard"
@page "/"

@layout PagesLayout

@inject IExMoneyTransactionsApi transactionsApi

<style>

    #wrapper {
        position: absolute;
        height: 100%;
        width: 100%;
        margin-left: 0 !important;
    }

    .panels {
        position: relative;
        height: 100%;
        min-height: 100%;
        width: 100%;
        min-width: 100%;
        z-index: 1000;
    }

    #b {
        top: 115px;
        min-width: 100%;
        width: 100%;
    }

    .text-transparent{
        color: transparent;
    }
</style>



<div id="wrapper">

    <UserIdentityDisplay />

    <div id="b" class="panels border-top border-dark rounded-9 shadow-lg bg-light">

        <div class="text-center text-black fs-3"> <span class="fas fa-tachometer-alt me-1"></span>Tableau de bord</div>

        <div class="container">
            <div class="row mt-3">
                <div class="col">
                    <StatsCard />
                </div>
            </div>
            
            <div class="row mt-3">
                <div class="col">
                    <div class="text-center small mt-1">Obtenez des taux de change plus bas
                        <span class="ms-2 fas fa-info-circle text-primary"></span>
                    </div>
                </div>
            </div>

            <div class="row mt-3">
                <div class="col">
                    <RequiredActionsCard />
                </div>
            </div>

            <div class="row mt-3 mb-6">
                <div class="col">
                    <div class="text-center fs-4 mb-1"> <span class="fas fa-stopwatch me-1"></span>En Cours</div>
                    
                    @if(OngoingTransactions is not null)
                    {
                        if(transactionReqOk)
                        {
                            <div class="card shadow-lg rounded-6">
                                <ul class="list-group p-2">
                                    @for (int i = 0; i < 3; i++)
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center">
                                            <div class="d-flex align-items-center">
                                                <div style="width: 80px; height: 80px" class="rounded-circle border d-flex align-items-center justify-content-center ms-n3">
                                                <span class="fs-4 text-primary">23.4</span>
                                                </div>
                                                <div class="ms-3">
                                                    <p class="mb-1"><span class="fw-bold">Naira:</span> 34945</p>
                                                    <p class="mb-0"><span class="fw-bold">Fcfa:</span> 766678</p>
                                                </div>
                                            </div>
                                            <span class="badge rounded-pill badge-warning">en cours</span>
                                        </li>
                                    }

                                    <li class="list-group-item">
                                        <div class="text-center">
                                            <a href="/account/transactions"> <span class="fas fa-arrow-alt-circle-right"></span> Voir Tout</a>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        }
                        else
                        {
                           <span class="text-danger">
                                Aucune Transaction trouv√©. Recharger !
                           </span>
                        }

                    }
                    else
                    {
                        <LoadingIndicator />
                    }
                </div>
            </div>

            <div class="row">
                <span class="text-transparent">exmoney</span>
            </div>
        </div>
    </div>
</div>

@code{

    public List<Transaction> OngoingTransactions { get; set; }
    private bool transactionReqOk = true;

    protected override async Task OnInitializedAsync()
    {
        //get 5 last transactions
        var ongoingTs = await transactionsApi.ListLast5Transactions("");
        transactionReqOk = ongoingTs.IsSuccessStatusCode;
        if(ongoingTs.IsSuccessStatusCode)
        {
            OngoingTransactions = ongoingTs.Content;
            StateHasChanged();
        }
    }
}